<UserControl x:Class="MainWindowUI.WindowControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainWindowUI"
             
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource PrimarySecondColor}"
     FontFamily="{DynamicResource MaterialDesignFont}"
   mc:Ignorable="d" 
             MinHeight="25" MaxHeight="25" MinWidth="300" Height="24.627" 
             >
    
        <Grid>
            
        <DockPanel Grid.Column="3">
            <Button Margin="1" DockPanel.Dock="Right"  WindowChrome.IsHitTestVisibleInChrome="True"
                             Background="{StaticResource AccentColor}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="0"
                    
                Width="25"
                Height="25"
                    Padding="5"
                    
                ToolTip="Resource name: MaterialDesignRaisedButton"
                    Click="ButtonClose_MouseClick"
                    >
                <materialDesign:PackIcon Kind="CloseBox" />
            </Button>
            <Button Margin="1" DockPanel.Dock="Right"  WindowChrome.IsHitTestVisibleInChrome="True"
                    
                             Background="{StaticResource AccentColor}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="0"
                Width="25"
                Height="25"
                      Padding="5"
                    
                ToolTip="Resource name: MaterialDesignRaisedButton"
                    Click="ButtonMaximize_MouseClick">
                <materialDesign:PackIcon Kind="WindowMaximize" />
            </Button>
            <Button Margin="1" DockPanel.Dock="Right" WindowChrome.IsHitTestVisibleInChrome="True"
                    materialDesign:ButtonAssist.CornerRadius="0"
                    
                Width="25"
                Height="25"
                      Padding="5"
                             Background="{StaticResource AccentColor}"
                    Click="ButtonMinimize_MouseClick">
                <materialDesign:PackIcon Kind="WindowMinimize" />
            </Button>
            <Label FontFamily="Forte" VerticalContentAlignment="Center" FontSize="14" Margin="-2,-5,0,0" DockPanel.Dock="Left"  WindowChrome.IsHitTestVisibleInChrome="True"
             
                    materialDesign:ButtonAssist.CornerRadius="0"
                    
                Width="auto"
                Height="25"
                      Padding="5"
                    
                ToolTip="Resource name: MaterialDesignRaisedButton">
                StepChat
            </Label>
            <Grid Width="50"/>
            <Label Name="Debug"/>
        </DockPanel>
    </Grid>
</UserControl>
