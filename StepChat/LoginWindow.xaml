        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StepChat"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="False"
        Title="LoginWindow" MinHeight="500" MinWidth="500" Width="500" Height="500" Background="#FF242832"
       >
    <Grid>
   
    <StackPanel>
        <local:WindowControlPanel x:Name="WindowControlPanel_"/>
        
    </StackPanel>
    </Grid>
        <WindowChrome.WindowChrome>
